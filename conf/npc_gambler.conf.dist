[worldserver]

###################################################################################################
#	GAMBLER NPC
###################################################################################################

# -------------------------------------------------------------------------------------
#  Announce the module when the player logs in?
#  Enable : 1
#  Disable: 0
# -------------------------------------------------------------------------------------
Gambler.Announce = 1

# -------------------------------------------------------------------------------------
#  How often does the NPC emote in milliseconds?
#  Randomly caclulated within range 60000 (1 min, minumum) to 3000000 (5 minutes, max)
#  Default: 60000 (1 minutes, minimum)
#  Disable: 0
# -------------------------------------------------------------------------------------
Gambler.MessageTimer = 60000

# -------------------------------------------------------------------------------------
#  The spell cast to get the player's attention
#  Default: 44940 
#  Disable: 0
# -------------------------------------------------------------------------------------
Gambler.EmoteSpell = 0

# -------------------------------------------------------------------------------------
#  Type of money allowed to gamble
#  Enable : 1
#  Disable: 0
# -------------------------------------------------------------------------------------
Gambler.EnableGold = 1
Gambler.EnableSilver = 1
Gambler.EnableCopper = 1
 
# ------------------------------------------------------------------------------------- 
#  Type of money to gamble
#  1: Copper, 2: Silver, 3: Gold 
#  Default: 2
# -------------------------------------------------------------------------------------
Gambler.MoneyType = 2

# -------------------------------------------------------------------------------------
#  Gambling amounts the player can choose from.
#  The random win/loss rate works well, but larger amounts of gold can be abused.
#  Default: 1, 5, 10, 15, 20
# -------------------------------------------------------------------------------------
Gambler.Amount1 = 1
Gambler.Amount2 = 5
Gambler.Amount3 = 10
Gambler.Amount4 = 15
Gambler.Amount5 = 20

# -------------------------------------------------------------------------------------
#  Jackpot Amount
#  Only possible if a 100 is rolled in the first 10 consecutive bets
#  Default: 50
# -------------------------------------------------------------------------------------
Gambler.Jackpot = 50
